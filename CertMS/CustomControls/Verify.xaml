<UserControl x:Class="CertMS.CustomControls.Verify"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:customControls="clr-namespace:CertMS.CustomControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
	<StackPanel>
		<customControls:LabeledTextBox Margin="5, 0, 5, 0"
		                               Label="Serial to verify"
		                               Text="{Binding VerifyGame}" />
		<Button Margin="5, 0, 5, 0"
		        Content="Verify"
		        Command="{Binding Verify}" />
	</StackPanel>
</UserControl>